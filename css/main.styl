transition()
    -moz-transition arguments
    -o-transition arguments
    -webkit-transition arguments
    transition arguments

respond-below($width)
    $width = $width - 1
    media = 'all and (max-width: %s)' % $width
    @media media
        {block}

respond-above($width)
    media = 'all and (min-width: %s)' % $width
    @media media
        {block}

respond-between($min-width, $max-width)
    $max-width = $max-width - 1
    media = 'all and (min-width: %s) and (max-width: %s)' % ($min-width $max-width)
    @media media
        {block}

menuWidth = 200px
menuContentGap = 120px
rightMargin = 120px

bgColor = #ffffff
fontColor = #000000

@font-face
    font-family 'PT Sans'
    font-style normal
    src url('http://fonts.googleapis.com/css?family=PT+Sans')



body
    margin 0
    background bgColor
    color fontColor
    font-family 'PT Sans', sans-serif
    font-size 14px
    line-height 1.5
    
a
    color #192034
    text-decoration none
    display inline-block
    position relative
    
    &:before
        content ''
        position absolute
        left 0px
        right 0px
        bottom 1px
        height 2px
        background #4d4d4d
        opacity .2
        
    &:hover
        &:before
            opacity 1
            background #0030ff
    
    
.menu
    position fixed
    width menuWidth
    text-align right
    left 0
    top 0
    bottom 0
    
    &__header
        margin 50px 0
        font-size 26px
        
        &:before
            display none
            
        &--back
            &:after
                content "‚Üê"
                opacity .2
                position absolute
                left -37px
                top 2px
                font-weight normal
                
            &:hover
                &:after
                    opacity 1
        
    &__main
        li
            margin-bottom 6px
                    
            a
                .cross
                    display none
                    position absolute
                    right -20px
                    top 5px
                    width 12px
                    height 12px
                    background url('../img/cross.jpg')
                    background-size cover
                    cursor pointer
                    opacity .8
                    
                    &:hover
                        opacity 1
            
            a.selected
                cursor default
                font-weight bold
                    
                &:before
                    display none
                    
                .cross
                    display block
                    
                    

    &__footer
        width 100%
        right 0
        position absolute
        bottom 25px
        
        &__social
            margin-bottom 50px
            
            p + p
                margin-top 3px
            
.content
    position relative
    margin-top 50px
    margin-bottom 30px
    margin-left menuWidth + menuContentGap
    margin-right rightMargin
    z-index 1

.project
    position relative
    padding-right 75px
    max-width 800px
    margin-bottom 75px
    
    &__title
        font-size 20px
        
        a  
            &:before
                bottom 3px
                
    &__subtitle
        font-size 18px
        margin-top 25px
        
    &__desc
        margin-top 10px
        
        img
            width 100%
        
    &__pics
        margin-top 10px
        position relative
        overflow hidden
        
        a
            color black
            display block
            
            &:before
                display none
            
            img
                position relative
                float left
                display block
                height 200px
                
                
    &__meta
        position absolute
        left 100%
        width rightMargin
        top 0
        color #bebebe
        
        &__supp
            margin-top 19px
            
    &__gallerie
        margin-top 10px
        overflow hidden
        
        &__item
            box-sizing border-box
            position relative
            float left
            width 25%
            border-right 1px solid #fff
            margin-bottom 15px
            
            img
                width 100%
                display block
                
            p
                position absolute
                bottom 0px
                left 0px
                right 0px
                background #000
                color #fff
                line-height 1.2
                padding 7px 7px 7px 24px
                transition opacity .3s
                
                span
                    position absolute
                    left 7px
                
            &:hover
                p
                    opacity 0
                    
        &--big
            .project__gallerie__item
                width 50%
                
                &:before
                    display none
                    
                p
                    padding-left 7px
                    
    &__screens
        &__menu
            text-align center
            padding 20px 0
            
            &--top
                padding-top 20px
                
            &--bottom
                padding-bottom 20px
            
            &__item
                border 1px solid #dbdbdb
                padding 0 5px
                
                &:before
                    display none
                    
                & + &
                    margin-left 5px
                    
                &:hover
                    border 1px solid #0030ff
                    
                &--active
                    border 1px solid #000 !important
                    cursor default
                    
        &__frame
            position relative
            width 100%
            
            &__device
                position absolute
                width 100%
                height 100%
                background-size contain
                background-repeat no-repeat
                background-position center center
                z-index 3
                display none
                
                &--mac
                    background-image url('../img/macbook.png')

                &--ipad
                    background-image url('../img/ipad.png')

                &--iphone
                    background-image url('../img/iphone.png')
                    
            &__content
                position absolute
                left 50%
                z-index 2
                background-size cover
                background-repeat no-repeat
                
.page-expander
    position absolute
    top 0px
    width 1px
    z-index 0
        